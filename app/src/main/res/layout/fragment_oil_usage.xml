<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/main_content"
android:fitsSystemWindows="true"
tools:context="fo.looknorth.view.OilUsageFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_gravity="center_horizontal|top" >

    </android.support.v4.view.ViewPager>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">



            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="380dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableText"
                android:padding="10dp"
                android:text="Table of oil consumption records:"
                android:gravity="center_horizontal" />

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TableRow
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/table_header">
                    <TextView
                        android:text="Recorded at:"
                        android:padding="5dp"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold" />
                    <TextView
                        android:text="Liters of oil used:"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:id="@+id/row1">
                    <TextView
                        android:tag="r1-label"
                        android:text="06:10 03.07.16"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:tag="r1-value"
                        android:text="5"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />
                </TableRow>
                <TableRow
                    android:id="@+id/row2">
                    <TextView
                        android:tag="r2-label"
                        android:text="10:13:33 10-11-2016"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:tag="r2-value"
                        android:text="5"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />
                </TableRow>
                <TableRow
                    android:id="@+id/row3">
                    <TextView
                        android:tag="r3-label"
                        android:text="10:13:33 10-11-2016"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:tag="r3-value"
                        android:text="2"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />
                </TableRow>
                <TableRow
                    android:id="@+id/row4">
                    <TextView
                        android:tag="r4-label"
                        android:text="10:13:33 10-11-2016"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:tag="r4-value"
                        android:text="2"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />
                </TableRow>
                <TableRow
                    android:id="@+id/row5">
                    <TextView
                        android:tag="r5-label"
                        android:text="10:13:33 10-11-2016"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:tag="r5-value"
                        android:text="1"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />
                </TableRow>
            </TableLayout>
            </LinearLayout>
        </ScrollView>

</FrameLayout>
